{
  "manifest_version": 3,
  "name": "TF1 AdBlock",
  "description": "Profitez de votre replay sans pub üçø",
  "version": "3.0.0",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://prod-player.tf1.fr/*"],
      "js": ["index.js"],
      "all_frames": true
    }
  ],
  "icons": {
     "16": "images/icon.png",
     "32": "images/icon.png",
     "48": "images/icon.png",
     "128": "images/icon.png"
   }
}
